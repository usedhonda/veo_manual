{
  "_template": "product-shot",
  "_description": "Generate product photography for commercial videos",
  "_usage": "Fill in placeholders marked with [PLACEHOLDER] for your product",

  "subject": {
    "identity": "[PRODUCT_NAME] - [PRODUCT_TYPE]",
    "appearance": {
      "clothing": "N/A",
      "features": "[PRODUCT_DETAILS: material, finish, colors, textures]",
      "age": "N/A",
      "accessories": "[ACCOMPANYING_ITEMS_IF_ANY]"
    },
    "expression": "N/A",
    "pose": "[PRODUCT_ANGLE: front view, 45-degree, flat lay, hero angle]"
  },
  "composition": {
    "framing": "[close_up | medium | wide - based on product size]",
    "angle": "[eye_level | slightly_elevated | top_down | dramatic_low]",
    "subject_position": "[center | rule_of_thirds_left | rule_of_thirds_right]",
    "negative_space": "[WHERE_TO_LEAVE_SPACE_FOR_TEXT_OR_MOTION]"
  },
  "background": {
    "type": "[studio | gradient | contextual | transparent]",
    "description": "[BACKGROUND_DETAILS]",
    "blur": "[none | slight | heavy_bokeh]"
  },
  "lighting": {
    "type": "studio",
    "direction": "[rim | side | front | multi-point]",
    "quality": "[soft | hard - hard for tech, soft for beauty]",
    "color_temperature": "[warm | neutral | cool]",
    "special": "[LIGHTING_EFFECTS: reflections, highlights, gradients]"
  },
  "style": {
    "medium": "photorealistic",
    "aesthetic": "[BRAND_AESTHETIC: premium, playful, minimal, luxury]",
    "color_palette": "[BRAND_COLORS_OR_MOOD_COLORS]",
    "mood": "[DESIRED_FEELING: sophisticated, exciting, trustworthy]"
  },
  "technical": {
    "resolution": "1080p",
    "aspect_ratio": "16:9",
    "camera_reference": "[CAMERA_STYLE: macro for details, wide for context]",
    "post_processing": "[COLOR_GRADE_AND_EFFECTS]"
  },
  "veo_optimization": {
    "intended_use": "first_frame",
    "planned_motion": "[VIDEO_ACTION: rotation, zoom, light sweep, reveal]",
    "consistency_anchors": ["product shape", "brand colors", "lighting style"]
  },

