{
  "_template": "text-to-video-cinematic",
  "_description": "Cinematic text-to-video template for film-quality output",
  "_mode": "Text-to-Video",
  "_usage": "Use for high-quality cinematic productions",

  "shot": {
    "type": "[wide | medium | close-up | extreme-close-up | establishing | over-the-shoulder]",
    "movement": "[static | slow dolly_in | slow dolly_out | tracking | slow orbit | crane_up | crane_down | handheld]",
    "lens": "[anamorphic | 24mm | 35mm | 50mm | 85mm | 135mm]",
    "speed": "[very_slow | slow | normal]",
    "focus": "[deep | shallow | rack_focus]"
  },
  "subject": {
    "identity": "[DETAILED_CHARACTER_DESCRIPTION]",
    "appearance": {
      "clothing": "[OUTFIT_DETAILS]",
      "features": "[PHYSICAL_CHARACTERISTICS]",
      "distinguishing_marks": "[UNIQUE_IDENTIFIERS]"
    },
    "expression": "[EMOTIONAL_STATE_AND_FACIAL_EXPRESSION]",
    "position": "[FRAME_POSITION_AND_BODY_LANGUAGE]"
  },
  "action": {
    "primary": "[MAIN_ACTION_VERB]",
    "secondary": "[SUPPORTING_ACTION]",
    "speed": "[slow | normal | fast]",
    "direction": "[toward_camera | away_from_camera | left_to_right | right_to_left | circular]",
    "timing": "[SPECIFIC_TIMING_BREAKDOWN]"
  },
  "scene": {
    "location": "[DETAILED_ENVIRONMENT]",
    "time_of_day": "[SPECIFIC_LIGHTING_TIME]",
    "weather": "[WEATHER_CONDITIONS]",
    "atmosphere": "[MOOD_AND_TONE_KEYWORDS]",
    "production_design": "[SET_DETAILS_AND_PROPS]"
  },
  "style": {
    "medium": "live_action",
    "film_reference": "[CAMERA_OR_FILM_STOCK]",
    "color_grade": "[SPECIFIC_COLOR_PALETTE]",
    "era": "[TIME_PERIOD_AESTHETIC]",
    "genre": "[CINEMATIC_GENRE]",
    "director_style": "[OPTIONAL_DIRECTOR_REFERENCE]"
  },
  "audio": {
    "dialogue": "[Character says: \"EXACT_LINE\"]",
    "sfx": "[SFX: DETAILED_SOUND_EFFECTS]",
    "ambience": "[Ambience: LAYERED_BACKGROUND_SOUNDS]",
    "music": "[Music: GENRE_MOOD_INSTRUMENTS]",
    "voice_style": "[DELIVERY_TONE_ACCENT]"
  },
  "negative": {
    "exclude": [
      "blur",
      "distortion",
      "low quality",
      "watermark",
      "text overlay",
      "subtitles",
      "compression artifacts",
      "flickering",
      "morphing"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9",
    "model": "veo-3.1-generate-001"
  },

