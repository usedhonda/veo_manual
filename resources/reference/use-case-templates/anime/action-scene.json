{
  "_template": "anime-action-scene",
  "_description": "Dynamic anime action sequences and fight scenes",
  "_use_case": "Battle scenes, chase sequences, dynamic action moments",
  "_workflow": "Ingredients mode with character reference for consistency",

  "reference_images": [
    {
      "source": "[CHARACTER_SHEET_IMAGE]",
      "role": "asset",
      "description": "[CHARACTER_IN_ACTION_READY_POSE]"
    }
  ],
  "shot": {
    "type": "[wide_action | medium_dynamic | close_impact]",
    "movement": "[tracking | whip_pan | dramatic_zoom]",
    "lens": "[24mm_wide | 35mm]",
    "speed": "[fast | very_fast | speed_ramping]",
    "angle": "[dynamic_dutch | low_power | high_overview]"
  },
  "subject": {
    "reference": "Character from reference image",
    "appearance": {
      "reinforce": "[KEY_VISUAL_TRAITS]",
      "action_state": "[battle_ready | mid_attack | defensive]"
    },
    "expression": "[ACTION_EMOTION: focused, fierce, determined]",
    "position": "[FRAME_POSITION_DURING_ACTION]"
  },
  "action": {
    "primary": "[MAIN_ACTION: attacks, dodges, runs, leaps]",
    "secondary": "[SUPPORTING_ACTION: effects, environment reaction]",
    "choreography": "[ACTION_BREAKDOWN_BEATS]",
    "timing": "[PRECISE_TIMING_FOR_IMPACT]"
  },
  "effects": {
    "motion_lines": "[speed_lines | impact_lines | none]",
    "particles": "[energy | debris | sparks | blood]",
    "impact_frames": "[flash | freeze_frame | smear]",
    "aura": "[POWER_EFFECTS_IF_ANY]"
  },
  "scene": {
    "location": "[ACTION_ENVIRONMENT]",
    "destruction": "[ENVIRONMENTAL_DAMAGE_LEVEL]",
    "atmosphere": "[BATTLE_MOOD]"
  },
  "style": {
    "medium": "anime",
    "sub_style": "[shonen_action | seinen_realistic | sakuga_style]",
    "animation_style": "[fluid | impactful | detailed]",
    "color_grade": "[HIGH_CONTRAST | DRAMATIC | VIBRANT]"
  },
  "audio": {
    "dialogue": "[BATTLE_CRY_OR_NONE]",
    "sfx": "SFX: [impact sounds, whooshes, effects]",
    "ambience": "[Ambience: battle environment]",
    "music": "Music: [intense action score]"
  },
  "negative": {
    "exclude": [
      "off-model",
      "static",
      "slow",
      "peaceful",
      "realistic",
      "blur",
      "morphing",
      "wrong character"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

