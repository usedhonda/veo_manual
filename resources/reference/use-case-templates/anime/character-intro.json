{
  "_template": "anime-character-intro",
  "_description": "Anime character introduction and reveal shots",
  "_use_case": "Character reveals, introductions, hero moments",
  "_workflow": "Phase 1 (Character Sheet) â†’ Phase 2 (Ingredients mode)",

  "_full_workflow": {
    "phase1_image": {
      "tool": "Nano Banana Pro / Gemini 2.5 Flash Image",
      "purpose": "Generate character sheet for consistency",
      "template": "phase1-nano-banana/templates/character-sheet.json"
    },
    "phase2_video": {
      "tool": "Veo 3.1",
      "mode": "Ingredients (Reference Images)",
      "purpose": "Generate video with consistent character"
    }
  },

  "reference_images": [
    {
      "source": "[CHARACTER_SHEET_IMAGE]",
      "role": "asset",
      "description": "[CHARACTER_VISUAL_DESCRIPTION]"
    }
  ],
  "shot": {
    "type": "[medium | close-up | full_body_reveal]",
    "movement": "[dramatic_dolly | crane_up | static_dramatic]",
    "lens": "[35mm | 50mm]",
    "speed": "[slow_dramatic | normal]",
    "angle": "[low_hero | eye_level | dutch_angle]"
  },
  "subject": {
    "reference": "Character from reference image",
    "appearance": {
      "reinforce": "[KEY_VISUAL_TRAITS_FROM_REFERENCE]",
      "consistent": "[HAIR_COLOR_STYLE, EYE_COLOR, OUTFIT]"
    },
    "expression": "[INTRODUCTION_MOOD: confident, mysterious, determined]",
    "pose": "[HEROIC | CASUAL | ACTION_READY]"
  },
  "action": {
    "primary": "[INTRODUCTION_ACTION: appears, turns, reveals]",
    "secondary": "[SUPPORTING_MOTION: hair flows, cape billows]",
    "dramatic_elements": "[wind | light_rays | particle_effects]",
    "timing": "[DRAMATIC_TIMING_BREAKDOWN]"
  },
  "scene": {
    "location": "[SETTING_FOR_CHARACTER]",
    "time_of_day": "[ATMOSPHERIC_LIGHTING_TIME]",
    "atmosphere": "[CHARACTER_MOOD_ENVIRONMENT]",
    "effects": "[ANIME_ATMOSPHERIC_EFFECTS]"
  },
  "style": {
    "medium": "anime",
    "sub_style": "[ANIME_STYLE: Ghibli, shonen, shoujo, modern]",
    "color_grade": "[ANIME_COLOR_PALETTE]",
    "mood": "[CHARACTER_INTRODUCTION_TONE]"
  },
  "audio": {
    "dialogue": "[OPTIONAL_INTRODUCTION_LINE]",
    "sfx": "SFX: [dramatic impact, whoosh, wind]",
    "music": "Music: [character_theme_style]"
  },
  "negative": {
    "exclude": [
      "off-model",
      "wrong hair color",
      "different outfit",
      "realistic",
      "3D render",
      "inconsistent style",
      "blur",
      "morphing"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

