  "shot": {
    "type": "[close-up_face | medium_performance | wide_stage | extreme_close_detail]",
    "movement": "[slow_orbit | tracking | crane | handheld_energy]",
    "lens": "[35mm | 50mm | 85mm | anamorphic]",
    "speed": "[sync_to_tempo | slow_motion | normal]",
    "focus": "[shallow_on_face | deep_stage | rack_between_members]"
  },
  "subject": {
    "artist_type": "[solo | duo | band | dance_group]",
    "appearance": "[ARTIST_STYLING_DESCRIPTION]",
    "expression": "[PERFORMANCE_EMOTION: passionate, intense, joyful]",
    "instrument": "[INSTRUMENT_IF_ANY]"
  },
  "action": {
    "primary": "[singing | playing_instrument | dancing | performing]",
    "secondary": "[crowd_interaction | band_member_looks | movement]",
    "energy": "[ENERGY_LEVEL: high | medium | intimate]",
    "sync": "[VISUAL_RHYTHM_MATCHING]"
  },
  "scene": {
    "location": "[stage | studio | abstract_set | real_location]",
    "lighting_style": "[concert_lights | cinematic | natural | abstract]",
    "atmosphere": "[PERFORMANCE_VIBE]"
  },
  "style": {
    "medium": "[live_action | stylized | anime_performance]",
    "aesthetic": "[MTV_era | modern_clean | artistic | raw]",
    "color_grade": "[MUSIC_GENRE_APPROPRIATE_GRADE]",
    "mood": "[SONG_MOOD_VISUAL_TRANSLATION]"
  },
  "audio": {
    "dialogue": "[LYRICS_BEING_PERFORMED - lip sync]",
    "sfx": "SFX: [performance sounds - amp hum, drums, crowd]",
    "ambience": "[Ambience: venue atmosphere]",
    "music": "Music: [GENRE_MOOD - reference track feel]"
  },
  "negative": {
    "exclude": [
      "blur",
      "distortion",
      "out of sync",
      "static",
      "boring",
      "wrong instrument",
      "morphing"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

