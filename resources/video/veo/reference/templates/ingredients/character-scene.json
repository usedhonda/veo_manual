      "negative": {
        "exclude": ["off-model", "wrong color", "different proportions", "scary", "realistic", "morphing"]
      },
      "meta": {
        "duration": 8,
        "resolution": "1080p",
        "aspect_ratio": "16:9"
      }
    }
  },

  "_best_practices": {
    "reference_image_preparation": [
      "Use clear, well-lit reference images",
      "Show character from multiple angles if possible",
      "Include distinguishing features clearly visible",
      "Avoid cluttered backgrounds in reference",
      "Character sheets work best for anime style"
    ],
    "prompt_writing": [
      "Always re-state key visual traits in the prompt",
      "Be specific about what must remain consistent",
      "Describe the character as 'from reference image'",
      "Add inconsistencies to negative prompt"
    ],
    "common_issues": [
      "Color drift: Specify exact colors in prompt",
      "Clothing change: Add 'same clothing' or specific outfit",
      "Face morphing: Add 'no morphing' and 'consistent face'",
      "Style change: Specify medium (anime/live_action) clearly"
    ]
  }
}
