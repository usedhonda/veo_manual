{
  "_template": "ingredients-character-scene",
  "_description": "Generate video with consistent character using reference images",
  "_mode": "Ingredients (Reference Images)",
  "_usage": "Use reference images to maintain character consistency across scenes",

  "_api_structure": {
    "instances": [{
      "prompt": "GENERATED_PROMPT_HERE",
      "referenceImages": [
        {
          "image": {
            "gcsUri": "gs://bucket/path/character-ref.png",
            "mimeType": "image/png"
          },
          "referenceType": "asset"
        }
      ]
    }],
    "parameters": {
      "aspectRatio": "16:9",
      "durationSeconds": 8
    }
  },

  "_constraints": {
    "max_reference_images": 3,
    "reference_type": "asset",
    "note": "Veo 3.1 does NOT support 'style' referenceType, only 'asset'"
  },

  "reference_images": [
    {
      "source": "[base64 | gcs_uri]",
      "role": "asset",
      "description": "[WHAT_THIS_IMAGE_PROVIDES - character, object, vehicle]"
    }
  ],
  "shot": {
    "type": "[wide | medium | close-up]",
    "movement": "[static | tracking | orbit | dolly]",
    "lens": "[24mm | 35mm | 50mm | 85mm]",
    "speed": "[slow | normal | fast]"
  },
  "subject": {
    "reference": "Using the [CHARACTER/OBJECT] from reference image",
    "appearance": {
      "reinforce": "[RE-STATE_KEY_VISUAL_TRAITS_FROM_REFERENCE]",
      "consistent_elements": "[MUST_MAINTAIN: clothing, colors, features]"
    },
    "expression": "[EMOTIONAL_STATE_FOR_THIS_SCENE]",
    "position": "[FRAME_POSITION]"
  },
  "action": {
    "primary": "[MAIN_ACTION_VERB]",
    "secondary": "[SUPPORTING_ACTION]",
    "direction": "[MOVEMENT_DIRECTION]",
    "timing": "[WHEN_ACTIONS_OCCUR]"
  },
  "scene": {
    "location": "[NEW_ENVIRONMENT_FOR_THIS_SCENE]",
    "time_of_day": "[LIGHTING_TIME]",
    "weather": "[CONDITIONS]",
    "atmosphere": "[MOOD]"
  },
  "style": {
    "medium": "[live_action | anime | 3d_animation]",
    "consistency": "Maintain visual style from reference images",
    "color_grade": "[COLOR_PALETTE]"
  },
  "audio": {
    "dialogue": "[Character says: \"Line\"]",
    "sfx": "[SFX: sounds]",
    "ambience": "[Ambience: environment]",
    "music": "[Music: OR 'NO music']"
  },
  "negative": {
    "exclude": [
      "off-model",
      "wrong clothing",
      "different hair color",
      "inconsistent features",
      "morphing",
      "blur",
      "distortion"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

  "_examples": {
    "anime_character_action": {
      "reference_images": [
        {
          "source": "gcs_uri",
          "role": "asset",
          "description": "Anime girl character sheet: blue hair in twin-tails, red eyes, school uniform with blue ribbon"
        }
      ],
      "shot": {
        "type": "medium",
        "movement": "tracking",
        "lens": "35mm",
        "speed": "fast"
      },
      "subject": {
        "reference": "Using the anime girl from reference image",
        "appearance": {
          "reinforce": "Blue twin-tail hair, red eyes, school uniform with blue ribbon",
          "consistent_elements": "Hair color and style, eye color, uniform design"
        },
        "expression": "Determined, focused, ready for action",
        "position": "Center, running toward camera then past"
      },
      "action": {
        "primary": "runs at full speed",
        "secondary": "hair and ribbon flowing dramatically",
        "direction": "toward_camera then right",
        "timing": "0-3s approaching, 3-5s passing camera, 5-8s receding"
      },
      "scene": {
        "location": "School rooftop at sunset",
        "time_of_day": "golden_hour",
        "weather": "clear, dramatic clouds",
        "atmosphere": "Urgent, dramatic, heroic"
      },
      "style": {
        "medium": "anime",
        "consistency": "Match character design from reference exactly",
        "color_grade": "Vibrant anime colors, warm sunset lighting"
      },
      "audio": {
        "sfx": "SFX: running footsteps, wind rushing, fabric flutter",
        "ambience": "Ambience: school rooftop, distant traffic, wind",
        "music": "Music: intense anime score, strings and percussion"
      },
      "negative": {
        "exclude": ["off-model", "wrong hair color", "different uniform", "realistic", "3D", "morphing", "blur"]
      },
      "meta": {
        "duration": 8,
        "resolution": "1080p",
        "aspect_ratio": "16:9"
      }
    },
    "photorealistic_character_dialogue": {
