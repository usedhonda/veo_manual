  "_best_practices": {
    "loop_types": {
      "cyclical": "Wave motion, breathing, pendulum - natural back-and-forth",
      "rotating": "Full 360 rotation returning to start - turntables, orbits",
      "flowing": "Continuous motion like fire, water, clouds - organic loops",
      "oscillating": "Brightness, size, position cycles - pulsing, flickering",
      "breathing": "Subtle life animation - characters, creatures"
    },
    "image_preparation": [
      "Choose images with elements that can move organically",
      "Avoid images with text that shouldn't move",
      "Static backgrounds work best",
      "Consider what motion makes sense for the subject"
    ],
    "prompt_writing": [
      "Emphasize return to starting position",
      "Use cyclical language: 'continuous', 'returns', 'cycles'",
      "Specify the type of loop motion clearly",
      "Add 'seamless loop' or 'returns to start' to prompt"
    ],
    "audio_note": "Generated audio may not loop perfectly. For true seamless loops, add loopable audio in post-production."
  }
}
