{
  "_template": "interpolation-seamless-loop",
  "_description": "Create perfectly looping video by using same image as first and last frame",
  "_mode": "Frame Interpolation (First Frame + Last Frame)",
  "_usage": "Generate seamlessly looping video for backgrounds, ambient content, social media",

  "_api_structure": {
    "instances": [{
      "prompt": "GENERATED_PROMPT_HERE",
      "image": {
        "gcsUri": "gs://bucket/path/loop-frame.png",
        "mimeType": "image/png"
      },
      "lastFrame": {
        "gcsUri": "gs://bucket/path/loop-frame.png",
        "mimeType": "image/png"
      }
    }],
    "parameters": {
      "aspectRatio": "16:9",
      "durationSeconds": 8
    }
  },

  "_key_concept": {
    "technique": "Use the SAME image for both first_frame and last_frame",
    "result": "Video returns to starting state, creating perfect loop",
    "use_cases": [
      "Background animations",
      "Social media content",
      "Loading screens",
      "Ambient displays",
      "Digital signage"
    ]
  },

  "input_images": {
    "first_frame": {
      "source": "[base64 | gcs_uri]",
      "role": "first_frame",
      "description": "[FRAME_DESCRIPTION]"
    },
    "last_frame": {
      "source": "SAME AS FIRST FRAME",
      "role": "last_frame",
      "description": "Identical to first frame for seamless loop"
    }
  },
  "loop_motion": {
    "type": "[cyclical | oscillating | rotating | breathing | flowing]",
    "description": "[MOTION_THAT_RETURNS_TO_START]",
    "axis": "[horizontal | vertical | circular | in-out]"
  },
  "shot": {
    "type": "[MATCH_TO_IMAGE]",
    "movement": "[static | subtle_drift - returns to start]",
    "speed": "[slow | normal]"
  },
  "subject": {
    "reference": "The subject shown in the frame image",
    "motion": "[HOW_SUBJECT_MOVES_AND_RETURNS]"
  },
  "action": {
    "primary": "[CYCLICAL_ACTION_VERB]",
    "description": "[MOTION_DESCRIPTION]",
    "timing": "smooth cycle that returns to starting position"
  },
  "scene": {
    "maintain": "Overall composition, colors, lighting",
    "animate": "[ELEMENTS_THAT_MOVE_IN_CYCLE]"
  },
  "audio": {
    "note": "For true loop, use seamless ambient audio externally",
    "sfx": "[SFX: loopable sounds]",
    "ambience": "[Ambience: continuous background]",
    "music": "NO music (add loopable music externally)"
  },
  "negative": {
    "exclude": [
      "jump",
      "pop",
      "discontinuity",
      "sudden change",
      "position shift",
      "blur",
      "distortion"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

  "_examples": {
    "campfire_loop": {
      "input_images": {
        "first_frame": {
          "source": "gcs_uri",
          "role": "first_frame",
          "description": "Campfire at night, flames, embers, logs, dark background"
        },
        "last_frame": {
          "source": "SAME AS FIRST FRAME",
          "role": "last_frame",
          "description": "Identical campfire image"
        }
      },
      "loop_motion": {
        "type": "flowing",
        "description": "Flames dance and flicker naturally, returning to similar state",
        "axis": "vertical (flames up)"
      },
      "shot": {
        "type": "medium",
        "movement": "static",
        "speed": "normal"
      },
      "subject": {
        "reference": "The campfire from the frame",
        "motion": "Flames dance, embers float up, logs glow and pulse"
      },
      "action": {
        "primary": "flames dance continuously",
        "description": "Fire flickers naturally, embers rise and fade, warm glow pulses",
        "timing": "continuous organic motion throughout"
      },
      "scene": {
        "maintain": "Fire position, log arrangement, dark background",
        "animate": "Flame shapes, ember particles, light on surroundings"
      },
      "audio": {
        "sfx": "SFX: fire crackling, wood popping",
        "ambience": "Ambience: night sounds, crickets, wind",
        "music": "NO music"
      },
      "negative": {
        "exclude": ["fire going out", "logs falling", "position change", "daylight", "jump"]
      },
      "meta": {
        "duration": 8,
        "resolution": "1080p",
        "aspect_ratio": "16:9"
      }
    },
