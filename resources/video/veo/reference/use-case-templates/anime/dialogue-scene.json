{
  "_template": "anime-dialogue-scene",
  "_description": "Anime conversation and dialogue scenes",
  "_use_case": "Character conversations, emotional moments, story exposition",
  "_workflow": "Ingredients mode with character reference for consistency",

  "reference_images": [
    {
      "source": "[CHARACTER_SHEET_IMAGE]",
      "role": "asset",
      "description": "[CHARACTER_REFERENCE_DESCRIPTION]"
    }
  ],
  "shot": {
    "type": "[close-up | medium | over_shoulder | two_shot]",
    "movement": "[static | subtle_drift | slow_dolly]",
    "lens": "[50mm | 85mm]",
    "speed": "slow",
    "angle": "[eye_level | slight_low | slight_high]"
  },
  "subject": {
    "reference": "Character from reference image",
    "appearance": {
      "reinforce": "[KEY_VISUAL_TRAITS]",
      "consistent": "[HAIR_EYES_OUTFIT]"
    },
    "expression": "[DIALOGUE_EMOTION: thoughtful, concerned, happy, conflicted]",
    "position": "[FRAME_POSITION]"
  },
  "action": {
    "primary": "[speaks | listens | reacts]",
    "secondary": "[subtle_gestures | expression_shift | eye_movement]",
    "lip_sync": "[speaking_or_listening]",
    "timing": "[DIALOGUE_TIMING]"
  },
  "scene": {
    "location": "[CONVERSATION_SETTING]",
    "time_of_day": "[MOOD_APPROPRIATE_TIME]",
    "atmosphere": "[EMOTIONAL_ATMOSPHERE]"
  },
  "style": {
    "medium": "anime",
    "sub_style": "[APPROPRIATE_ANIME_STYLE]",
    "color_grade": "[MOOD_APPROPRIATE_COLORS]",
    "mood": "[SCENE_EMOTIONAL_TONE]"
  },
  "audio": {
    "dialogue": "[Character says: 'Exact dialogue line']",
    "voice_style": "[DELIVERY_TONE_EMOTION]",
    "sfx": "SFX: [subtle environmental sounds]",
    "ambience": "Ambience: [location sounds]",
    "music": "Music: [emotional underscore OR 'NO music']"
  },
  "negative": {
    "exclude": [
      "off-model",
      "wrong expression",
      "action scene energy",
      "realistic",
      "blur",
      "morphing",
      "text overlay",
      "subtitles"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

