{
  "_template": "commercial-lifestyle",
  "_description": "Lifestyle scenes showing products in use",
  "_use_case": "Brand storytelling, product-in-context advertising",
  "_workflow": "Text-to-Video or Image-to-Video with lifestyle context",

  "shot": {
    "type": "[medium | wide]",
    "movement": "[tracking | dolly | static]",
    "lens": "[35mm | 50mm]",
    "speed": "[normal | slow]",
    "focus": "[deep | shallow_on_action]"
  },
  "subject": {
    "person": {
      "demographic": "[TARGET_AUDIENCE_REPRESENTATION]",
      "appearance": "[RELATABLE_STYLING]",
      "expression": "[POSITIVE_EMOTION]"
    },
    "product": {
      "identity": "[PRODUCT_NAME]",
      "placement": "[IN_USE | VISIBLE | SUBTLE]",
      "interaction": "[HOW_PERSON_USES_PRODUCT]"
    }
  },
  "action": {
    "primary": "[LIFESTYLE_ACTION: using, enjoying, discovering]",
    "secondary": "[SUPPORTING_ACTION]",
    "energy": "[CALM | ENERGETIC | FOCUSED]",
    "timing": "[ACTION_BREAKDOWN]"
  },
  "scene": {
    "location": "[ASPIRATIONAL_SETTING]",
    "time_of_day": "[FLATTERING_LIGHT_TIME]",
    "atmosphere": "[BRAND_MOOD]"
  },
  "style": {
    "medium": "live_action",
    "aesthetic": "[LIFESTYLE_BRAND_LOOK]",
    "color_grade": "[WARM_INVITING | CLEAN_MODERN | ENERGETIC]",
    "mood": "[ASPIRATIONAL | RELATABLE | INSPIRING]"
  },
  "audio": {
    "dialogue": "[OPTIONAL_VOICEOVER_OR_DIALOGUE]",
    "sfx": "[SFX: natural environmental sounds]",
    "ambience": "[Ambience: location sounds]",
    "music": "Music: [BRAND_APPROPRIATE_TRACK]"
  },
  "negative": {
    "exclude": [
      "blur",
      "distortion",
      "unflattering angles",
      "cluttered background",
      "competing products"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

