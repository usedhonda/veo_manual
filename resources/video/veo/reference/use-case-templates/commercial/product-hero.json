  "_full_workflow": {
    "phase1_image": {
      "tool": "Nano Banana Pro / Gemini 2.5 Flash Image",
      "purpose": "Generate product hero image as first frame",
      "template": "phase1-nano-banana/templates/product-shot.json"
    },
    "phase2_video": {
      "tool": "Veo 3.1",
      "mode": "Image-to-Video",
      "purpose": "Animate product image into commercial video"
    }
