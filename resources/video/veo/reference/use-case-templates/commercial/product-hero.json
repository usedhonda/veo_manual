  "shot": {
    "type": "close-up hero",
    "movement": "slow orbit",
    "lens": "macro to 50mm",
    "speed": "slow",
    "focus": "shallow with product sharp"
  },
  "subject": {
    "identity": "[PRODUCT_NAME] - [PRODUCT_TYPE]",
    "appearance": {
      "material": "[PRODUCT_MATERIALS: metal, glass, plastic, leather]",
      "finish": "[SURFACE_FINISH: matte, glossy, brushed, textured]",
      "colors": "[BRAND_COLORS]",
      "details": "[KEY_FEATURES_TO_HIGHLIGHT]"
    },
    "position": "center frame, hero placement"
  },
  "action": {
    "primary": "[rotates | reveals | light_sweep]",
    "secondary": "[SUPPORTING_MOTION: lid opens, LED illuminates]",
    "direction": "[ROTATION_DIRECTION]",
    "timing": "[MOTION_BREAKDOWN]"
  },
  "scene": {
    "background": "[studio | gradient | contextual_lifestyle]",
    "surface": "[reflective | matte | textured]",
    "atmosphere": "Premium, aspirational"
  },
  "lighting": {
    "type": "studio",
    "setup": "[rim | three-point | dramatic_side]",
    "quality": "[hard_for_tech | soft_for_beauty]",
    "special": "[light_sweep | reflections | caustics]"
  },
  "style": {
    "medium": "photorealistic",
    "aesthetic": "[premium | luxury | tech | lifestyle]",
    "color_grade": "[BRAND_APPROPRIATE_GRADE]",
    "mood": "[sophisticated | exciting | trustworthy | innovative]"
  },
  "audio": {
    "sfx": "SFX: [product_appropriate_sounds]",
    "music": "Music: [brand_appropriate_soundtrack]"
  },
  "negative": {
    "exclude": [
      "blur",
      "distortion",
      "fingerprints",
      "dust",
      "scratches",
      "logo",
      "text",
      "cheap looking",
      "plastic looking"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

