{
  "_template": "music-video-narrative",
  "_description": "Story-driven music video scenes",
  "_use_case": "Music videos with narrative elements, story scenes",
  "_workflow": "Text-to-Video or Ingredients mode for character consistency",

  "shot": {
    "type": "[establishing | medium_scene | close-up_emotion | wide_context]",
    "movement": "[cinematic_tracking | dolly | crane | handheld_intimate]",
    "lens": "[24mm | 35mm | 50mm | anamorphic]",
    "speed": "[slow_emotional | normal | fast_montage]",
    "focus": "[FOCUS_STRATEGY]"
  },
  "subject": {
    "character": "[STORY_CHARACTER_DESCRIPTION]",
    "appearance": "[CHARACTER_STYLING]",
    "expression": "[EMOTIONAL_STATE]",
    "role": "[protagonist | love_interest | memory | symbol]"
  },
  "action": {
    "primary": "[STORY_ACTION]",
    "secondary": "[SUPPORTING_STORY_BEAT]",
    "emotion_arc": "[EMOTIONAL_JOURNEY_IN_CLIP]",
    "timing": "[NARRATIVE_TIMING]"
  },
  "scene": {
    "location": "[STORY_SETTING]",
    "time_of_day": "[MOOD_LIGHTING]",
    "narrative_context": "[WHERE_IN_STORY]",
    "atmosphere": "[EMOTIONAL_ENVIRONMENT]"
  },
  "style": {
    "medium": "[live_action | stylized | mixed]",
    "aesthetic": "[VISUAL_NARRATIVE_STYLE]",
    "color_grade": "[STORY_MOOD_COLORS]",
    "mood": "[NARRATIVE_EMOTIONAL_TONE]"
  },
  "audio": {
    "dialogue": "[SONG_LYRICS_MATCHING_SCENE OR internal_moment]",
    "sfx": "SFX: [story-appropriate sounds]",
    "ambience": "Ambience: [location atmosphere]",
    "music": "Music: [SONG_SECTION_MOOD]"
  },
  "negative": {
    "exclude": [
      "blur",
      "distortion",
      "morphing",
      "breaking narrative",
      "wrong mood",
      "inconsistent character"
    ]
  },
  "meta": {
    "duration": 8,
    "resolution": "1080p",
    "aspect_ratio": "16:9"
  },

